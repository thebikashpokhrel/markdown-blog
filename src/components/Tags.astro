---
const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<div class="mt-6 flex flex-wrap gap-2 items-center">
  {
    tags.map((tag) => (
      <a
        href={`/articles/tag/${tag}`}
        class="text-sm dark:bg-slate-200 dark:text-slate-800 bg-slate-700 text-white rounded-full px-2 py-1 dark:hover-bg-slate-600 hover:bg-slate-500 transition duration-100"
      >
        {tag}
      </a>
    ))
  }
</div>
